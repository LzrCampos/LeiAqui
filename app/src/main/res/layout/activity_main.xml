<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="4"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCustomer"
        android:layout_width="1in"
        android:layout_height="1in"
        android:layout_marginStart="24dp"
        android:text="Cliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReaderTypes"
        android:layout_width="1in"
        android:layout_height="1in"
        android:text="Categoria de Leitores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCustomer"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBookType"
        android:layout_width="1in"
        android:layout_height="1in"
        android:layout_marginStart="24dp"
        android:text="Categoria de livros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCustomer" />

    <Button
        android:id="@+id/btnBook"
        android:layout_width="1in"
        android:layout_height="1in"
        android:text="Livros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBookType"
        app:layout_constraintTop_toBottomOf="@+id/btnReaderTypes" />

</androidx.constraintlayout.widget.ConstraintLayout>